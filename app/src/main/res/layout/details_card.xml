<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="286dp"
        android:layout_height="183dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="67dp"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="58dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/fry" />

    <TextView
        android:id="@+id/detail_character_name"
        android:layout_width="321dp"
        android:layout_height="131dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="542dp"
        android:text="@string/fry"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_resume_character"
        android:layout_width="wrap_content"
        android:layout_height="241dp"
        android:layout_below="@+id/detail_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:text="@string/fry_resume"
        android:textSize="20sp"
        android:textStyle="italic" />
</RelativeLayout>